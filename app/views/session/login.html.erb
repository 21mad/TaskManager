<div class="d-inline-flex flex-column bg-light" style="width: 100%; height: 100vh; overflow: auto">
  <div class="header" style="position: fixed; width: 100%; top: 0">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-2" style="height: 125%">
      <div class="container-fluid">
        <img src="https://findicons.com/files/icons/732/snow_leopard/256/folder_folder.png" alt="Logo" style="width: 30px; height: 30px; margin-right: 10px">
        <a class="navbar-brand">Login</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ms-auto ">
            <li class="nav-item">
              <a class="nav-link mx-2" aria-current="page" href="/session/login">My Tasks</a>
            </li>
            <li class="nav-item">
              <%= link_to "Account", "/session/login" , class: "nav-link mx-2 active"%>
            </li>
            <li class="nav-item">
              <%= link_to "Logout", session_logout_path, class: "nav-link mx-2" %>
            </li>
          </ul>
        </div> 
      </div>
    </nav>
  </div>

  <div class="row d-flex justify-content-center" style="width: 100%; padding-top: 80px">
    <div class="col-3 border rounded">
		<h1>Welcome!</h1>
		<p>To continue, log in to your account:</p>
		<%=form_with url: session_create_path, method: :post, local:true do |f|%>
			<div>
				<%= f.label 'User name', style: "display: block"%>
				<%=f.text_field :username, require: true, class: "form-control" %>
			</div>
			<div>
				<%= f.label 'Password', style:"display: block" %>
				<%=f.password_field :password, require: true, class: "form-control" %>
			</div>
			<div style="margin: 20px 0 20px 0">
				<%=f.submit id: 'submit-btn', value: 'Log in',require: true, class: "btn btn-success" %>
			</div>
		<%end%>
		<%unless flash[:notice].blank?%>
			<h2 style = 'color:red'><%= flash[:notice] %></h2>
		<%end%>
		<p>Don't have an account yet? Create!</p>
		<%=link_to 'Registration', new_user_path, class: "link-secondary"%>
    </div>
  </div>
</div>
