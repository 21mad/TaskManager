<div id="animated-bg" class="d-inline-flex flex-column bg-light" style="width: 100%; height: 100vh; overflow: auto">
  <div class="header" style="position: fixed; width: 100%; top: 0">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-2" style="height: 125%">
      <div class="container-fluid">
        <img src="https://findicons.com/files/icons/732/snow_leopard/256/folder_folder.png" alt="Logo" style="width: 30px; height: 30px; margin-right: 10px">
        <a class="navbar-brand"><%= t 'signup' %></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'EN', root_path(locale: :en), class: "nav-link mx-2" %>
            </li>
            <li class="nav-item">
              <%= link_to 'RU', root_path(locale: :ru), class: "nav-link mx-2" %>
            </li>
          </ul>
          <ul class="navbar-nav ms-auto ">
            <li class="nav-item">
              <a class="nav-link mx-2" aria-current="page" href="/<%= locale %>/session/login"><%= t 'my_tasks' %></a>
            </li>
            <li class="nav-item">
              <%= link_to t("account"), "/#{locale}/session/login" , class: "nav-link mx-2 active"%>
            </li>
            <li class="nav-item">
              <%= link_to t("logout"), session_logout_path, class: "nav-link mx-2" %>
            </li>
          </ul>
        </div> 
      </div>
    </nav>
  </div>

  <div class="row d-flex justify-content-center" style="width: 100%; padding-top: 80px">
    <div class="col-3 border rounded bg-light">
      <h1><%= t 'user_reg' %></h1>
      <%= render "form", user: @user %>
      <br>
      <div>
        <%= link_to t("login"), session_login_path, class: "link-secondary" %>
      </div>
    </div>
  </div>
</div>