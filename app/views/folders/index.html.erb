<div class="d-inline-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 15%; height: 100vh; float: left">
  <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
    <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
    <span class="fs-4">My Folders</span>
  </a>
  <hr>
  <ul class="nav nav-pills flex-column mb-auto">
    <%# <li class="nav-item">
      <a href="#" class="nav-link active" aria-current="page">
        <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"/></svg>
        Home
      </a>
    </li> %>
    <% @folders.each do |folder|%>
    <li>
      <div class="nav-link">
        <%= link_to image_tag('logos/settings-16.png'), url_for("folders/#{folder.id}/edit"), :class => 'bi me-2', :remote => true %>
        <%= link_to folder.name, folder, style: "color: white; text-decoration: none"%>
      </div>
    </li>
    <% end %>
    <li>
      <a href="#" class="nav-link text-white">
        <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"/></svg>
        Dashboard
      </a>
    </li>
  </ul>
  <hr>
  <p><%= button_to "New folder", new_folder_path, class: "btn btn-success", method: :get %></p>
</div>

<div class="d-inline-flex flex-column bg-light" style="width: 85%; height: 100vh; overflow: auto">
  <div class="header" style="position: fixed; width: 85%; top: 0">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-2" style="height: 124%">
      <div class="container-fluid">
        <%# <a class="navbar-brand" href="#">Logo</a> %>
        <img src="https://findicons.com/files/icons/732/snow_leopard/256/folder_folder.png" alt="Logo" style="width: 30px; height: 30px">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ms-auto ">
            <li class="nav-item">
              <a class="nav-link mx-2 active" aria-current="page" href="#">My Tasks</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mx-2" href="#">Analytics</a>
            </li>
            <li class="nav-item">
              <%= link_to "Account", "users/#{current_user.id}" , class: "nav-link mx-2"%>
            </li>
            <li class="nav-item">
              <%= link_to "Logout", session_logout_path, class: "nav-link mx-2" %>
            </li>
          </ul>
        </div> 
      </div>
    </nav>
  </div>

  <div class="row d-flex justify-content-center" style="width: 100%; padding-top: 60px">
    <div class="col-10">
      <p style="color: green"><%= notice %></p>
      <h1>Select a folder or create a new one!</h1>
      <div class="text-center">
        <%= image_tag "https://www.pngmart.com/files/19/Smile-Emoticon-Transparent-PNG.png", alt: "smile_png" %>
      </div>

      <div id="folders">
        <% @folders.each do |folder| %>
          <p>
            <%= folder.name %>
            <%= link_to "Show this folder", folder %>
          </p>
        <% end %>
      </div>

      <%= link_to "New folder", new_folder_path %>
      <%= link_to "Выйти из аккаунта", session_logout_path %>
      <table class="table" style="width: 100%">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td>@mdo</td>
          </tr>
          <tr>
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
            <td>@fat</td>
          </tr>
          <tr>
            <th scope="row">3</th>
            <td>Larry</td>
            <td>the Bird</td>
            <td>@twitter</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
